<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_DialogNovoProfissional_Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/editText_DialogNovoProfissional_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="13"
        android:hint="@string/introduza_o_nome_do_novo_profissional_"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView_DialogNovoProfissional_CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="CC:"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_DialogNovoProfissional_cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="13"
        android:hint="Introduza o numero de CC..."
        android:lines="1"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView_DialogNovoProfissional_Tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/spinner_DialogNovoProfissional_Tipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:listitem="@android:layout/simple_spinner_dropdown_item"

        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#0099CC"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_DialogNovoProfissional_Guardar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/save" />

</LinearLayout>