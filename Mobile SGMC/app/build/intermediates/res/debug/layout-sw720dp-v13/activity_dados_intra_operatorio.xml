<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="it.sephiroth.android.library.floatingmenu.app.MainActivity"
    android:id="@+id/scrollViewDadosIntraOperatorio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EEEEEE"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/txtview_especialidade"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Especialidade Cirurgica: "
                android:textColor="#000000"
                android:textStyle="italic"
                android:layout_marginTop="10dp" />

            <Spinner
                android:id="@+id/spinnerEspecialidade"
                android:layout_width="250dp"
                android:layout_height="fill_parent"
                android:entries="@array/arrayEspecialidade" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/txtView_cirurgia"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Cirurgia: "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editTextCirurgia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ems="10"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtView_data"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Data: "
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/TextViewData"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="      /        /     "
                    android:gravity="end"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/TextView_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Hora:"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/TextViewHoraCirurgia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="      :        :     "
                    android:layout_marginLeft="5dp"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>

